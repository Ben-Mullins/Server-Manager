@page
@model ServerProjectTracker.Pages.Tracker.IndexModel
@{
    ViewData["Title"] = "Tracker Dashboard";
}

<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Tracker Dashboard</h1>
        <div>
            <select class="form-control select">
                <option value="">Sort By</option>
                <option value="">Title</option>
                <option value="">Instructor Owner</option>
                <option value="">Date Added</option>
                <option value="">Date Updated</option>
            </select>
        </div>
    </div>

    <div class="row project-cards">
        @for (int i = 1; i < 7; i++)
        {
            <div class="col-6">
                <component type="typeof(Components.ProjectComponent)" render-mode="Static" param-Title='"Project " + i' param-Description='"Project Description " + i' 
                           param-Language='"C#"' param-AddTime="new DateTime()" param-UpdateTime="new DateTime()"
                           param-ImageLink='"/images/placeholder.jpg"' param-ProjectLink='$"localhost/{i}"' param-ProjectDetailsLink='$"/tracker/{i}"'/>
            </div>
        }
    </div>
</div>
